{% extends 'base.html.twig' %}

{% block body %}
<div class="container my-5">
    <div class="d-flex align-items-baseline justify-content-between flex-wrap gap-3 mb-4">
        <div>
        <h1 class="h3 mb-1">{{ category.name }}</h1>
        <p class="text-muted mb-0">
            {{ category.products|length }} produit{{ category.products|length > 1 ? 's' : '' }}
        </p>
        </div>
    </div>

    {% if category.products is empty %}
        <div class="text-center py-5 border rounded-3 bg-light-subtle">
        <h2 class="h5 mb-2">Aucun produit pour le moment</h2>
        <p class="text-muted mb-0">Revenez bientÃ´t ðŸ™‚</p>
        </div>
    {% else %}
        <div class="row row-cols-2 row-cols-sm-3 row-cols-lg-4 g-4">
        {% for product in category.products %}
            <div class="col">
            <div class="card product-card h-100 shadow-sm position-relative">
                <div class="ratio ratio-4x3 overflow-hidden">
                <img
                    src="/uploads/{{ product.illustration }}"
                    alt="{{ product.name }}"
                    class="object-fit-cover w-100 h-100"
                    loading="lazy">
                </div>
                <div class="card-body d-flex flex-column">
                <h2 class="fs-6 fw-semibold product-title mb-2">{{ product.name }}</h2>
                <div class="mt-auto d-flex align-items-center justify-content-between">
                    <span class="fw-bold">{{ product.pricewt|price }}</span>
                    <a href="{{ path('app_product', { slug: product.slug }) }}"
                    class="stretched-link btn btn-sm btn-outline-primary rounded-pill">
                    Voir
                    </a>
                </div>
                </div>
            </div>
            </div>
        {% endfor %}
        </div>
    {% endif %}
    </div>

{% endblock %}

