    {% extends 'base.html.twig' %}

    {% block body %}
    <div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

        <div class="card shadow-sm border-1">
            <div class="card-body p-4 p-lg-5">
            <h1 class="h3 mb-3">Connexion</h1>

            {% if error %}
                <div class="alert alert-danger" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post" novalidate>
                <div class="mb-3">
                <label for="username" class="form-label">Votre email</label>
                <div class="input-group">
                    <span class="input-group-text"><i data-feather="mail"></i></span>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required autofocus>
                </div>
                </div>

                <div class="mb-3">
                <label for="password" class="form-label">Votre mot de passe</label>
                <div class="input-group">
                    <span class="input-group-text"><i data-feather="lock"></i></span>
                    <input class="form-control" type="password" id="password" name="_password" required>
                    <button class="btn btn-outline-secondary" type="button" id="togglePassword" aria-label="Afficher/Masquer le mot de passe">
                    <span id="passwordIcon"><i data-feather="eye"></i></span>
                    </button>
                </div>
                </div>

                <input type="hidden" name="_target_path" value="{{ path('app_account') }}">

                <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg">Me connecter</button>
                </div>
            </form>

            <hr class="my-4">

            <p class="mb-0 text-center">
                Vous n'avez pas de compte ?
                <a href="{{ path('app_register') }}">Inscrivez-vous</a>
            </p>
            </div>
        </div>

        </div>
    </div>
    </div>

    {# Script : toggle mot de passe + remplacement propre de l’icône (sans doublons) #}
    <script>
    document.addEventListener('DOMContentLoaded', function () {
    const btn   = document.getElementById('togglePassword');
    const input = document.getElementById('password');
    const iconHolder = document.getElementById('passwordIcon');
    if (!btn || !input || !iconHolder) return;

    // Première passe d’icônes si le layout global ne l’a pas déjà fait
    if (window.feather) feather.replace();

    function setIcon(name) {
        // Insère l’icône SVG directement sans dupliquer
        if (window.feather && feather.icons && feather.icons[name]) {
        iconHolder.innerHTML = feather.icons[name].toSvg();
        } else {
        // fallback très basique si feather indisponible
        iconHolder.textContent = (name === 'eye') ? '👁️' : '🙈';
        }
    }

    btn.addEventListener('click', () => {
        const showing = (input.type === 'password'); // on va afficher ?
        input.type = showing ? 'text' : 'password';
        setIcon(showing ? 'eye-off' : 'eye');
    });
    });
    </script>
    {% endblock %}
