{% extends 'base.html.twig' %}

{% block body %}

    <div class="container my-5">
    <div class="d-flex align-items-baseline justify-content-between flex-wrap gap-3 mb-4">
        <h1 class="h3 mb-0">Mon panier</h1>
        <p class="text-muted mb-0">{{ fullCartQuantity }} article{{ fullCartQuantity > 1 ? 's' : '' }}</p>
    </div>

    {% if cart is empty %}
        <div class="text-center py-5 border rounded-3 bg-body-tertiary">
        <h2 class="h5 mb-2">Votre panier est vide</h2>
        <p class="text-muted mb-0">Parcourez les cat√©gories et ajoutez vos produits pr√©f√©r√©s üôÇ</p>
        </div>
    {% else %}
        <div class="row g-4">
        <!-- Liste des produits -->
        <div class="col-lg-8">
            {% for product in cart %}
            <div class="card border-1 shadow-sm mb-3">
                <div class="card-body">
                <div class="row g-3 align-items-center">
                    <div class="col-3 col-md-2">
                    <div class="ratio ratio-1x1">
                        <img
                        src="/uploads/{{ product.object.illustration }}"
                        alt="{{ product.object.name }}"
                        class="img-fluid rounded">
                    </div>
                    </div>
                    <div class="col-9 col-md-6">
                    <strong class="d-block mb-1">{{ product.object.name }}</strong>
                    <span class="small text-muted">Prix unitaire : {{ product.object.pricewt|price }}</span>
                    </div>
                    <div class="col-7 col-md-2">
                    <div class="d-flex align-items-center gap-2">
                        <a href="{{ path('app_cart_decrease', { id : product.object.id }) }}"
                        class="btn btn-outline-secondary btn-sm" aria-label="Diminuer">
                        &minus;
                        </a>
                        <span class="badge text-bg-secondary">x{{ product.qty }}</span>
                        <a href="{{ path('app_cart_add', { id : product.object.id }) }}"
                        class="btn btn-outline-secondary btn-sm" aria-label="Augmenter">
                        +
                        </a>
                    </div>
                    </div>
                    <div class="col-5 col-md-2 text-end">
                    <strong>{{ (product.qty * product.object.pricewt)|price }}</strong>
                    </div>
                </div>
                </div>
            </div>
            {% endfor %}

            <a href="{{ path('app_cart_remove') }}" class="small d-inline-flex align-items-center gap-2 text-decoration-none mt-2">
            üóëÔ∏è Vider le panier
            </a>
        </div>

        <!-- R√©capitulatif -->
        <div class="col-lg-4">
            <div class="card shadow border-1 position-sticky" style="top: 2rem;">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                <span class="fw-bold">Total produits</span>
                <span>{{ fullCartQuantity }}</span>
                </div>
                <div class="d-flex justify-content-between mt-3">
                <span class="fw-bold">Prix total T.T.C</span>
                <span class="fs-5 fw-bold">{{ totalWt|price }}</span>
                </div>
                <a href="{{ path('app_order') }}" class="btn btn-success w-100 mt-4 btn-lg">Commander</a>
                <p class="text-muted small text-center mt-2 mb-0">TVA incluse</p>
            </div>
            </div>
        </div>
        </div>
    {% endif %}
    </div>


{% endblock %}


