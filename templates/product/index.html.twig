{% extends 'base.html.twig' %}

{% block body %}

<div class="container my-5">

{# Fil d’Ariane #}
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb mb-0">
    <li class="breadcrumb-item">
        <a href="{{ path('app_category', { slug : product.category.slug }) }}">{{ product.category.name }}</a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">{{ product.name }}</li>
    </ol>
</nav>

<div class="row g-4">
    {# Image produit #}
    <div class="col-lg-6">
    <div class="card border-0 shadow-sm">
        <div class="ratio ratio-1x1">
        <img
            src="/uploads/{{ product.illustration }}"
            alt="{{ product.name }}"
            class="img-fluid rounded-top"
            loading="lazy">
        </div>
    </div>
    </div>

    {# Infos produit #}
    <div class="col-lg-6">
    <div class="position-sticky" style="top: 2rem;">
        <small class="d-inline-flex align-items-center gap-2 text-muted mb-2">
        <a class="text-decoration-none" href="{{ path('app_category', { slug : product.category.slug } ) }}">{{ product.category.name }}</a>
        <span>•</span>
        <i>{{ product.name }}</i>
        </small>

        <h1 class="h3 mb-2">{{ product.name }}</h1>

        <div class="d-flex align-items-baseline gap-3 mb-3">
        <span class="display-6 fw-bold">{{ product.pricewt|price }}</span>
        </div>

        {# Description en accordéon #}
        <div class="accordion mb-4" id="productDetails">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingDesc">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDesc" aria-expanded="true" aria-controls="collapseDesc">
                Description
            </button>
            </h2>
            <div id="collapseDesc" class="accordion-collapse collapse show" aria-labelledby="headingDesc" data-bs-parent="#productDetails">
            <div class="accordion-body">
                {{ product.description|raw }}
            </div>
            </div>
        </div>
        </div>

        <a href="{{ path('app_cart_add', { id : product.id } ) }}" class="btn btn-success btn-lg w-100">
        Ajouter au panier
        </a>

        <div class="mt-3 text-center">
        <a href="{{ path('app_category', { slug : product.category.slug } ) }}" class="text-decoration-none">
            ← Retour à {{ product.category.name }}
        </a>
        </div>
    </div>
    </div>
</div>

</div>


{% endblock %}


